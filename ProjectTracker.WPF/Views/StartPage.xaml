        <DockPanel Grid.Column="1" Margin="20 0 0 0">
            <Label DockPanel.Dock="Top"
                   Content="Calendar"
                   Style="{StaticResource labelTitle}"/>

            <Border Style="{StaticResource defaultBorder}">
                <calendar:Calendar ItemsSource="{Binding Events}"/>
            </Border>
        </DockPanel>
    </Grid>
    
</UserControl>
